---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import TheProduct from '../components/TheProduct.astro';
export interface Props {
	link: any
  heroInfo: any
}

const { link, heroInfo } = Astro.props;
---
<Layout title="交易 - YuzeTT 的快速导航">
  <div class="bg-blue-100 flex h-100vh w-100vw p-5">
    <div class="bg-white m-auto rounded-2xl divide-y divide-gray-100 shadow-md max-w-xl w-full">
      <div class="p-5">
        <Hero name={heroInfo?.name} introduction={heroInfo?.introduction} />
      </div>
      <div class="p-5">
        <h3 class="text-2xl font-bold text-center">{link?.title}</h3>
        <h3 class="op-70 text-center">{link?.remarks}</h3>
        <div class="mt-5">
          {link?.list.map((item:any) => {
            return <TheProduct title={item.title} remarks={item.remarks} price={item.price} />
          })}
        </div>
      </div>
    </div>
  </div>
</Layout>