---
export interface Props {
	name: string;
  introduction: string;
}
import { nanoid } from 'nanoid'
const { name, introduction } = Astro.props;

const getID = () => {
  const id = localStorage.getItem("id")
  if(id) {
    return id
  } else {
    const newID = nanoid(10)
    localStorage.setItem("id", newID)
    return newID
  }
}
